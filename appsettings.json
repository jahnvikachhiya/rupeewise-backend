{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  
"ConnectionStrings": {
    "DefaultConnection": "Server=${DB_SERVER};Database=${DB_NAME};Trusted_Connection=True;Encrypt=False;MultipleActiveResultSets=true;Connection Timeout=30;"
},

  "JwtSettings": {
    "SecretKey": "YOUR_SUPER_SECRET_JWT_KEY_MINIMUM_32_CHARACTERS_LONG_PLEASE_CHANGE_THIS_IN_PRODUCTION",
    "Issuer": "rupeewise-api",
    "Audience": "rupeewise-client",
    "ExpiryInHours": 12,
    "RefreshTokenExpiryInDays": 7
},
"AdminAccount": {
    "Username": "${ADMIN_USERNAME}",
    "Email": "${ADMIN_EMAIL}",
    "Password": "${ADMIN_PASSWORD}"
},

  "AppSettings": {
    "ApplicationName": "Rupeewise",
    "Version": "1.0.0",
    "Environment": "Production",
    "EnableDetailedErrors": false,
    "MaxExpenseAmount": 10000000.00,
    "MinExpenseAmount": 0.01,
    "DefaultCurrency": "INR",
    "CurrencySymbol": "â‚¹",
    "DateFormat": "dd/MM/yyyy",
    "TimeZone": "Asia/Kolkata",
    "BudgetAlertThresholds": {
      "Info": 80,
      "Warning": 90,
      "Alert": 100
    },
    "NotificationSettings": {
      "EnableBudgetAlerts": true,
      "EnableExpenseNotifications": true,
      "EnableMonthlySummary": true,
      "MonthlySummaryDay": 1
    },
    "Pagination": {
      "DefaultPageSize": 20,
      "MaxPageSize": 100
    }
  },

  "CORS": {
    "PolicyName": "AllowSpecificOrigins",
    "AllowedOrigins":  "${CORS_ALLOWED_ORIGINS}",
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH" ],
    "AllowedHeaders": [ "*" ],
    "ExposedHeaders": [ "Content-Disposition" ],
    "AllowCredentials": true,
    "PreflightMaxAge": 600
  },

  "Security": {
    "PasswordMinLength": 6,
    "PasswordRequireUppercase": true,
    "PasswordRequireLowercase": true,
    "PasswordRequireDigit": true,
    "PasswordRequireSpecialChar": true,
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 30,
    "SessionTimeoutMinutes": 60
  },

  "FileUpload": {
    "MaxFileSizeMB": 5,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".pdf" ],
    "UploadPath": "Uploads/Receipts"
  },
 "Brevo": {
  "ApiKey": "${BREVO_API_KEY}",
  "SenderEmail": "${BREVO_SENDER_EMAIL}",
  "SenderName": "${BREVO_SENDER_NAME}"
},
"AppUrl": "${APP_URL}"



}